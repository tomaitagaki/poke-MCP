# X API Credentials
# Get these from https://developer.x.com/en/portal/dashboard

# OAuth 1.0a credentials (legacy support - optional)
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# OAuth 2.0 credentials (REQUIRED for bookmarks and modern features)
# Get these from the X Developer Portal when you enable OAuth 2.0
X_CLIENT_ID=your_oauth2_client_id_here
X_CLIENT_SECRET=your_oauth2_client_secret_here
CALLBACK_URL=https://your-app.onrender.com/callback

# OAuth 2.0 Persistent Tokens (obtained after visiting /authorize)
# Copy these from the callback page or server logs after authorization
# These allow the server to maintain authentication across restarts
OAUTH2_ACCESS_TOKEN=your_access_token_here
OAUTH2_REFRESH_TOKEN=your_refresh_token_here
OAUTH2_EXPIRES_IN=7200
OAUTH2_EXPIRES_AT=timestamp_here
OAUTH2_TOKEN_TYPE=Bearer

# Anthropic API Key (for bookmark categorization)
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server configuration
PORT=3000
NODE_ENV=production
