# X API Credentials
# Get these from https://developer.x.com/en/portal/dashboard

# OAuth 1.0a credentials (legacy support - optional)
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# OAuth 2.0 credentials (REQUIRED for bookmarks and modern features)
# Get these from the X Developer Portal when you enable OAuth 2.0
X_CLIENT_ID=your_oauth2_client_id_here
X_CLIENT_SECRET=your_oauth2_client_secret_here
CALLBACK_URL=https://your-app.onrender.com/callback

# Server configuration
PORT=3000
NODE_ENV=production
